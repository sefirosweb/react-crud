{
  "name": "@sefirosweb/react-crud",
  "version": "2.1.0",
  "description": "Basic components for CRUD with react",
  "homepage": "https://sefirosweb.github.io/react-crud",
  "license": "MIT",
  "author": "@Sefirosweb",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "docker": "docker run --rm -it --name node-docker-storybook -v ~/.gitconfig:/etc/gitconfig -e \"NODE_OPTIONS=--openssl-legacy-provider\" -v ~/.gnupg:/home/node/.gnupg -v $PWD:/home/app -w /home/app -p 3000:3000 -p 6006:6006 -u node node:18.5.0-bullseye /bin/bash"
  },
  "peerDependencies": {
    "@tanstack/react-table": "^8.2.2",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/my-components.esm.js",
  "size-limit": [
    {
      "path": "dist/my-components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/my-components.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addons": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@tanstack/react-table": "^8.2.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "babel-loader": "^8.2.5",
    "husky": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
